<body>

<p id="notice"><%= notice %></p>
<div class = "welcome">
<h1 class = "list">Listing Your Students</h1>

<div class="relative">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <% if current_user.students.include? student %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <td><%= student.email %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>


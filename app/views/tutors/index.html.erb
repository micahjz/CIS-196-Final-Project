<p id="notice"><%= notice %></p>

<div class = "welcome">
<h1>Tutors</h1>

<div class = "relative">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutors.each do |tutor| %>
      <tr>
        <td><%= link_to tutor.name, tutor %></td>
        <td><%= tutor.email %></td>
        <td><%= tutor.field %></td>
        <% if tutor == current_user %>
        <td><%= link_to 'Edit', edit_tutor_path(tutor) %></td>
        <td><%= link_to 'Unsubscribe', tutor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class = "subber">
<%= link_to 'New Tutor', new_tutor_path %>
</div>
</div>
